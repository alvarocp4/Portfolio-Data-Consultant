---
import Carousel from '../ui/carousel/Carousel.astro';
import { logos } from '../../data/logos';
interface SkillItem {
  icon: string; // inline SVG
  title: string;
  description: string;
}

interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<section id="skills" class="w-full py-8 scroll-mt-16">
  <div class="mx-auto max-w-6xl px-4">
    {title && (
      <h2 class="text-3xl md:text-4xl font-semibold text-center mb-6 text-foreground">{title}</h2>
    )}
  
    <div class="mb-6">
      <Carousel tools={logos} />
    </div>
  </div>
</section>


